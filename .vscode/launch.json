{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Current TS File",
          "type": "node",
          "request": "launch",
          "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
          "args": [
              "${relativeFile}"
          ],
          "cwd": "${workspaceFolder}",
          "sourceMaps": true,
          "resolveSourceMapLocations": [
              "${workspaceFolder}/**",
              "!**/node_modules/**"
          ],
      }
  ]
}